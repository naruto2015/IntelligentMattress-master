<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00000000"
    android:id="@+id/sleep_layout"

    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_weight="4"
            style="@style/MyTextTv15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/px28"
            android:text="1月2号 周五" />

        <TextView
            android:layout_weight="7"
            style="@style/MyTextTv15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/px28"
            android:text="" />


        <TextView
            style="@style/MyTextTv15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/px28"
            android:layout_weight="4"
            android:gravity="center"
            android:text="1月2号 周五" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.rt.sm.view.CircleProgressView
            app:tSize="26sp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                >

                <TextView
                    style="@style/MyTextTv15"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="睡眠时长" />
                <TextView
                    android:layout_weight="4"
                    style="@style/MyTextWhite15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="8小时13分" />

                <TextView
                    android:layout_weight="4"
                    style="@style/MyTextTv15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="睡眠分" />
                <TextView
                    android:layout_weight="2"
                    style="@style/MyTextgreen15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="95" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    style="@style/MyTextTv15"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="平均心跳" />
                <TextView
                    android:layout_weight="4"
                    style="@style/MyTextWhite15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="8小时13分" />

                <TextView
                    android:layout_weight="4"
                    style="@style/MyTextTv15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="平均呼吸" />
                <TextView
                    android:layout_weight="2"
                    style="@style/MyTextWhite15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="95" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <TextView
                    style="@style/MyTextTv15"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="身动次数" />
                <TextView
                    android:layout_weight="4"
                    style="@style/MyTextWhite15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="8小时13分" />

                <TextView
                    android:layout_weight="4"
                    style="@style/MyTextTv15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="打鼾次数" />
                <TextView
                    android:layout_weight="2"
                    style="@style/MyTextWhite15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="95" />

            </LinearLayout>





        </LinearLayout>


        </LinearLayout>
    <View
        android:layout_marginTop="@dimen/px28"
        android:background="#435280"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    </LinearLayout>


