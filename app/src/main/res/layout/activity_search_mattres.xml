<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_gradient">


    <RelativeLayout
        android:background="@color/colorBg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_icon"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:text="返回"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorTvL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </RelativeLayout>


        <TextView
            android:text="添加床垫"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textColor="@color/colorTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <TextView
        android:layout_marginTop="18dp"
        android:textColor="@color/colorTv"
        android:text="正在搜索附近的床垫"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/colorTvL"
        android:text="这需要几秒至几分钟时间,请稍等"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.rt.sm.view.CircleWaveView
            android:id="@+id/circle"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerInParent="true" />


        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_start_search"
            style="@style/MyTextWhite17"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_bg_bluedark"
            android:gravity="center"
            android:text="取消搜索" />

    </RelativeLayout>










</LinearLayout>
